{
    "manifest_version": 2,
    "name": "Budget",
    "description": "Google extension!",
    "version": "1.0",
    "icons": {
      "128": "icon/128.png",
      "48": "icon/48.png",
      "16": "icon/16.png"
    },
  
    "browser_action": {
      "default_icon": "icon/16.png",
      "default_popup": "index.html"
    },

    "options_page": "options.html",

    "background": {
      "scripts": ["eventPage.js"],
      "persistent": false
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
  }